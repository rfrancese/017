<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.unisa.mytraveldiary"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="it.unisa.mytraveldiary.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="it.unisa.mytraveldiary.WelcomeMessageActivity"
            android:label="@string/title_activity_welcome_message"
            android:parentActivityName="it.unisa.mytraveldiary.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.unisa.mytraveldiary.MainActivity" />
        </activity>
        <activity
            android:name="it.unisa.mytraveldiary.MasterTravelMessageActivity"
            android:label="@string/title_activity_master_travel_message"
            android:parentActivityName="it.unisa.mytraveldiary.WelcomeMessageActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.unisa.mytraveldiary.WelcomeMessageActivity" />
        </activity>
        <activity
            android:name="it.unisa.mytraveldiary.NewTravelMessageActivity"
            android:label="@string/title_activity_new_travel_message"
            android:parentActivityName="it.unisa.mytraveldiary.MasterTravelMessageActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.unisa.mytraveldiary.MasterTravelMessageActivity" />
        </activity>
        <activity
            android:name="it.unisa.mytraveldiary.SearchTravelMessageActivity"
            android:label="@string/title_activity_search_travel_message"
            android:parentActivityName="it.unisa.mytraveldiary.MasterTravelMessageActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.unisa.mytraveldiary.MasterTravelMessageActivity" />
        </activity>
        <activity
            android:name="it.unisa.mytraveldiary.InfoMessageActivity"
            android:label="@string/title_activity_info_message"
            android:parentActivityName="it.unisa.mytraveldiary.MasterTravelMessageActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.unisa.mytraveldiary.MasterTravelMessageActivity" />
        </activity>
    </application>

</manifest>
