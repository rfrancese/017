<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    
  <!-- stile caratteri -->
    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
            <item name="android:textColor">#ffffff</item>
             <item name="android:typeface">sans</item>
           </style>
    <style name="theme">theme_tema</style>
    
    <!-- stile action bar -->
    
    <style name="ActionBarTheme" parent="Theme.AppCompat">
        <item name="android:actionBarStyle">@style/actionBar</item>
        <item name="android:background">@color/black</item>
        <item name="android:itemBackground">@color/pink</item>
    </style>

    <style name="actionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">#DC143C</item>
    </style>
    
    <color name="black">#000000</color>
    <color name="pink">#DC143C</color>
      
</resources>
