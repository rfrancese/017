<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="it.unisa.mytraveldiary.NewTravelMessageActivity$PlaceholderFragment" >


        <Button
            android:id="@+id/FotoVideoButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="100dp"
            android:onClick="avantiFotoVideo"
            android:text="@string/FotoVideoButton"
            android:padding="4dip"
            android:background="@drawable/background" 
            style="@style/CodeFont" />

        <Button
            android:id="@+id/TrasportiButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_below="@id/FotoVideoButton"
            android:onClick="avantiTrasporti"
            android:text="@string/TrasportiButton"
            android:padding="4dip"
            android:background="@drawable/background" 
            style="@style/CodeFont"/>
        
        <Button
            android:id="@+id/MuseiButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_below="@id/TrasportiButton"
            android:onClick="avantiMusei"
            android:text="@string/MuseiButton"
            android:padding="4dip"
            android:background="@drawable/background" 
            style="@style/CodeFont"/>
        
        <Button
            android:id="@+id/HotelRistorantiButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_below="@id/MuseiButton"
            android:onClick="avantiHotelRistoranti"
            android:text="@string/HotelRistorantiButton"
            android:padding="4dip"
            android:background="@drawable/background" 
            style="@style/CodeFont"/>
        
    </RelativeLayout>

</ScrollView>